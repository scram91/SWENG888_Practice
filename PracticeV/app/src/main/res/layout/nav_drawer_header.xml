<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/dark_green">

    <ImageView
        android:id="@+id/nav_drawer_header_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/philadelphia" />

    <TextView
        android:id="@+id/nav_drawer_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@id/nav_drawer_header_image"
        android:textColor="@color/beige"
        android:text="@string/pick_a_cheesesteak"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nav_drawer_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_drawer_header_title"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@id/nav_drawer_header_image"
        android:textColor="@color/beige"
        android:text="@string/philadelphia_pa"
        android:textSize="16sp" />

</RelativeLayout>